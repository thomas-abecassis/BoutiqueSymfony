{% extends 'base.html.twig' %}

{% block title %}
	Boutique -
	{{ product.name }}
	!
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-4">
			<img class="img-fluid" src="/uploads/{{ product.image }}" alt="{{ product.name }}" , class="img-fluid">
		</div>
		<div class="col-md-8">
			<h3>
				{{ product.name }}
			</h3>
			<p>
				{{ product.subtitle }}
			</p>
			<span class="product-page-price">{{ (product.price/100)|number_format(2, '.', ',') }}
				€</span>
			<hr>
			<p>
				{{product.description}}
			</p>
			<hr>
			<a href="{{ path('add_cart', { 'id' : product.id }) }}" class="btn btn-primary">
				Ajouter au panier
			</a>

		</div>
	</div>
	<hr>
	<h3>
		Nos meilleur ventes
	</h3>
	<p>
		Découvrez nos meilleurs ventes
	</p>
	<div class="row">
		{% for product in products 	%}
			<div class="d-flex col-md-3 ">
				{% include "product/one-product.html.twig" %}
			</div>
		{% endfor %}
	</div>

{% endblock %}
