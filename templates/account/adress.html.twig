{% extends 'base.html.twig' %}

{% block title %}
	Boutique - Vos adresses
{% endblock %}

{% block content %}
	{% if app.user.adresses|length > 0 %}

		<a class="float-right btn btn-primary btn-sm" href="{{ path('app_account_adress_add') }} ">Ajouter une adress</a>

	{% endif %}

	<h3>Mes adresses</h3>
	GÃ©rer mes adresses. Retour Ã 
	<a href="{{ path('app_account') }}">mon compte</a>

	<hr>

	{% if app.user.adresses|length == 0 %}
		<p>vous n'avez pas d'adresses, en ajouter une :
			<a class=" btn btn-primary btn-lg" href="{{ path('app_account_adress_add')}}">Ajouter une adress</a>

		</p>
	{% else %}
		<div class="row">

			{% for address in app.user.adresses %}
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">{{ address.name }}</h5>
							<h6 class="card-subtitle mb-2 text-muted">{{ address.firstname }}
								{{ address.lastname }}
								{{ address.phone }}</h6>
							<p class="card-text">
								<span title="{{ address.adresse }}" class="oneline-text">{{ address.adresse }},<br></span>

								{{ address.postal }}
								-
								{{ address.city }}
								-
								{{ address.country }}
							</p>
							<a href="{{ path('app_account_adress_edit', {'id' : address.id}) }}">Modifier</a>
							|
							<a href="{{ path('app_account_adress_delete', {'id' : address.id}) }}">Supprimer</a>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	{% endif %}


{% endblock %}
