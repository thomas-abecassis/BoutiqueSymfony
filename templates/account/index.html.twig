{% extends 'base.html.twig' %}

{% block title %}Mon compte - Boutique!
{% endblock %}

{% block content %}
	<h1>Bonjour
		{{app.user.firstname}}</h1>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('admin') }}">
			<span>Vous êtes administrateur, accéder au back-office</span>
		</a>
		<br>
	{% endif %}
	<a href="{{ path('app_account_password') }}">
		<span>Modifier mon mot de passe</span>
	</a>
	<br>
	<a href="{{ path('app_account_adress') }}">
		<span>Gérer mes adresses</span>
	</a>
	<br>
	<a href="{{ path('app_account_orders') }}">
		<span>Gérer mes commandes</span>
	</a>
{% endblock %}
